{% extends "base.html.twig" %}
{% block title %}Update Author{% endblock %}
{% block body %}
    <div class="container-fluid mt-3">
        <h2 class="text-center">Update Author</h2>  
        <div class="conl-mb-6"></div>
            {{form_start(form)}}
                <div class="form-group">
                    <p class="text-info text-bold"> Author Name </p>
                    {{ form_widget (form.Name, {'attr': {'class' : 'form-control'}}) }}                </div>
                <div class="form-group">
                    <p class="text-info text-bold"> Author Birthplace </p>
                    {{ form_widget (form.Birthplace, {'attr': {'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <p class="text-info text-bold"> Author Birthday </p>
                    {{ form_widget (form.Birthday, {'attr': {'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <p class="text-info text-bold"> Author Image </p>
                    {{ form_widget (form.Image, {'attr': {'class' : 'form-control'}}) }}
                </div>
                <div class="form-group text-center mt-3">
                    <button class="btn btn-primary">UPDATE</button>
                </div>
            {{form_end(form)}}
    </div>
{% endblock %}