{% extends "base.html.twig" %}

{% block title %} Update book {% endblock %}

{% block body %}
  <div class="container-fluid mt-3">
      <h2 class="text-center mt-5">UPDATE BOOK</h2>
      <div class="col-md-6"></div>
          {{ form_start (form) }}
              <div class="form-group">
                  <p class="text-info text-bold"> Book Title </p>
                  {{ form_widget (form.Title, {'attr': {'class' : 'form-control'}}) }}
              </div>
              <div class="form-group">
                <p class="text-info text-bold"> Book Price </p>                  
                {{ form_widget (form.Price, {'attr': {'class' : 'form-control'}}) }}
              </div>
              <div class="form-group">
                <p class="text-info text-bold"> Book Quantity </p>                  
                {{ form_widget (form.Quantity, {'attr': {'class' : 'form-control'}}) }}
              </div>
              <div class="form-group">
                <p class="text-info text-bold"> Book's Author </p>                  
                  {{ form_widget (form.Author, {'attr': {'class' : 'form-control'}}) }}
              </div>
              <div class="form-group">
                    <p class="text-info text-bold"> Book Image </p>
                    {{ form_widget (form.Image, {'attr': {'class' : 'form-control'}}) }}
                </div>
              <div class="form-group text-center mt-3">
                  <button class="btn btn-primary btn-lg">UPDATE</button>
              </div>
          {{ form_end (form)}}
  </div>   
{% endblock %}