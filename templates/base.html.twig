<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <!-- CSS only -->
            <link rel="stylesheet" href="{{asset('css/bootstrap.min.css')}}">
            {# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous"> #}
        {% endblock %}

        {% block javascripts %}
            <!-- JavaScript Bundle with Popper -->
            <link rel="stylesheet" href="{{asset('js/bootstrap.bundle.min.js')}}">
            {# <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>        #}
        {% endblock %}
        <style>
            body {
                margin: 0 auto;
                width: 80%;
            }
        </style>
    </head>
    <body>
        {% block nav %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid" style="width:60%">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse show" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link active" style="margin-left: 20px" aria-current="page" href="{{path('author_list')}}">Author Management</a>
                        <a class="nav-link active" style="margin-left: 50px" aria-current="page" href="{{path('book_list')}}">Book Management</a>
                        <a class="nav-link active" style="margin-left: 50px" aria-current="page" href="{{path('type_list')}}">Book Type</a>
                        <a class="nav-link active" style="margin-left: 50px" aria-current="page" href="{{path('app_logout')}}">Log Out</a>
                    </div>
                </div>
            </div>
        </nav>
        {% endblock %}

        {% block body %}
        
        {% endblock %}
    </body>
</html>
