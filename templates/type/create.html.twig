{% extends "base.html.twig" %}
{% block title %}Create Type{% endblock %}
{% block body %}
    <div class="container-fluid mt-3">
        <h2 class="text-center">Create Type</h2>  
        <div class="conl-mb-6"></div>
            {{form_start(form)}}
                <div class="form-group">
                    <p class="text-info text-bold"> Type Name </p>
                    {{ form_widget (form.Name, {'attr': {'class' : 'form-control'}}) }}               
                </div>
                <div class="form-group">
                    <p class="text-info text-bold"> Type Image </p>
                    {{ form_widget (form.Image, {'attr': {'class' : 'form-control'}}) }}
                </div>
                <div class="form-group">
                     <p class="text-info text-bold"> Books in type  </p>
                        {{ form_widget (form.Title, {'attr': {'class' : 'form-control'}}) }}
                </div>
                <div class="form-group text-center mt-3">
                    <button class="btn btn-primary">CREATE</button>
                </div>
            {{form_end(form)}}
    </div>
{% endblock %}