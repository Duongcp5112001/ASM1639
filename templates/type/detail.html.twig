{% extends 'base.html.twig' %}

{% block title %}Author Detail Infomation{% endblock %}
{% block body %}
<div class="container mt-3">
    <a class="btn btn-primary" href="{{path('type_list')}}">Type List</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Type ID</th>
                <th scope="col">Type Name</th>
                <th scope="col">Books</th>
                <th scope="col">Type Image</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td scope="row">{{type.id}}</td>
                <td scope="row">{{type.name}}</td>
                <td scope="row">
                    {% for a in type.Title %}
                        <a href="{{ path ('book_detail', {'id' : book.id }) }}">
                              {{ book.title }}
                        </a>
                        <br>
                    {% endfor %}   
                </td>
                <td scope="row">
                    <img src="{{asset('images/type/' ~ type.image)}}" width="200px" height="288px"/>
                </td>
                <td scope="row">
                    <a class="btn btn-warning" href="{{path('type_update', {'id':type.id})}}">Update</a>
                    <a class="btn btn-warning" href="{{path('type_delete', {'id':type.id})}}"
                    onclick="return confirm('Are you sure to delete ?')"
                    >Delete</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}
